{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/ping",
      "destination": "/api/health"
    },
    {
      "source": "/api/test-connection",
      "destination": "/api/health"
    },
    {
      "source": "/api/migrate",
      "destination": "/api/data"
    },
    {
      "source": "/api/init-data",
      "destination": "/api/data"
    },
    {
      "source": "/api/vouchers",
      "destination": "/api/promotions"
    },
    {
      "source": "/api/promo-cards",
      "destination": "/api/promotions"
    },
    {
      "source": "/api/payments",
      "destination": "/api/transactions"
    },
    {
      "source": "/api/refunds",
      "destination": "/api/transactions"
    },
    {
      "source": "/api/notifications",
      "destination": "/api/feedback"
    },
    {
      "source": "/api/reviews",
      "destination": "/api/feedback"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

